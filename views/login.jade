doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        script(src='https://code.jquery.com/jquery-3.1.1.min.js', integrity='sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=', crossorigin='anonymous')
        link(rel='stylesheet', type='text/css', href='css/style.css')
        title Caciano's ToDo App
    body
        h1 Caciano's ToDo App
        h3 #{messages}
        form(method="POST")
            .container
                .inputs
                    label Email:
                    input(type='email', name='email', required='required', maxlength="50")
                .inputs
                    label Password:
                    input(type='password', name='password', required='required', maxlength="30")
                div
                    button#login-submit(type='submit') Login
                    button#newuser(type='button', onclick='window.location="sign-up"') New Here?
