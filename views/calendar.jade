        .popup(id="newPopup", style='visibility: hidden')
            .calendar_container
                h2 Enter New Event
                form#popup_form(method='POST')
                    #event-title
                        label Event title:
                        input(type='text', name='event', maxlength='100', required='required')
                    #event-details
                        label Event details:
                        textarea(name='details', rows='5', maxlength='1000', required='required')
                    #hour
                        select(name='hoursList', required='required')
                            option(hidden='hidden', value='') hour
                            option(value='1') 1
                            option(value='2') 2
                            option(value='3') 3
                            option(value='4') 4
                            option(value='5') 5
                            option(value='6') 6
                            option(value='7') 7
                            option(value='8') 8
                            option(value='9') 9
                            option(value='10') 10
                            option(value='11') 11
                            option(value='12') 12
                    #minutes
                        select(name='minutesList', required='required')
                            option(hidden='hidden', value='') minutes
                            option(value='0') 0
                            option(value='15') 15
                            option(value='30') 30
                            option(value='45') 45
                    #am-fm
                        label
                            | am
                            input(type='radio', value='am', name='ampm', checked='checked')
                        label
                            | pm
                            input(type='radio', value='pm', name='ampm')
                    #event-buttons
                        button#cancel-popup(type='button') Cancel
                        button#view_events(type='button') View Events
                        button#submit-popup(type='submit') Submit
                    input(id="currentDay", type="hidden", name="day")
                    input(id="currentMonth", type="hidden", name="month")
                    input(id="currentYear", type="hidden", name="year")
        .popup(id="eventList", style="visibility: hidden")
            .calendar_container
                h2 Listed Events
                button#close_events(type="button") <b>X</b>
                div#listContainer
                    div
